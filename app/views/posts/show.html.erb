<h1 class="title">
<%= @post.title %>
</h1>

<p class="date">
Submitted <%= time_ago_in_words(@post.created_at) %> Ago<br/><br/>
<%= link_to like_post_path(@post), method: :put, class: "btn btn-info" do %>
<span class= "glyphicon glyphicon-heart"></span> Like
<%= @post.get_upvotes.size %>
<% end %>

| <%= link_to "Edit", edit_post_path(@post), class: "btn btn-info" %> 
| <%= link_to "Delete", post_path(@post.id), data: {method: :delete, confirm: "Are you sure?"}, class: "btn btn-info" %>
 
</p>

<p class="body">
<%= @post.body %>
</p>

<div id="comments">
<h2><%= @post.comments.count %> Comments</h2>
<%= render @post.comments %>

<h3>Add a comment</h3>
<%= render "comments/form" %>

</div>